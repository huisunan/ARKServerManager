            <cc:InstalledVersionConverter x:Key="InstalledVersionConverter"/>
            <cc:InvertBooleanConverter x:Key="InvertBooleanConverter"/>
            <cc:InvertBooleanToVisibilityConverter x:Key="InvertBooleanToVisibilityConverter"/>
